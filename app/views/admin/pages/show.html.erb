<h1>Editing page - <%= link_to(h(@page.title), page_path(@page)) %></h1>

<% semantic_form_for([:admin, @page]) do |form| -%>
  <%= render :partial => 'form', :locals => {:form => form} %>
  <% field_set_tag nil, :class => 'buttons' do %>
    <%= form.commit_button("Save") -%>
  <% end -%>
<% end -%>
